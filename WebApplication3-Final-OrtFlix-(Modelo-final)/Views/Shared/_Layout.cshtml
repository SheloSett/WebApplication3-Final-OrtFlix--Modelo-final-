<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3_Final_OrtFlix__Modelo_final_.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="brand fs-1">ORTFlix</span>
            </a>

            <ul class="nav nav-pills justify-content-center align-items-center">
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Contenidoes" asp-action="Index">Contenidos</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Pricing">Suscripciones</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Politicas de Privacidad</a></li>
            </ul>
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 text-light">Inicio</a></li>
                <li class="nav-item"><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Pricing">Suscripciones</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link px-2 text-light">Politicas de Privacidad</a></li>
            </ul>
            <p class="text-center text-light">© 2024 ORTFlix, Inc</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
